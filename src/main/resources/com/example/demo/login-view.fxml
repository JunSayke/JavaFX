<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
   <children>
      <VBox fx:id="pnLogIn" alignment="CENTER" prefHeight="275.0" prefWidth="300.0" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <GridPane hgap="20.0" prefHeight="117.0" prefWidth="273.0" vgap="20.0">
           <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="109.0" minWidth="10.0" prefWidth="88.0" />
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="161.0" minWidth="10.0" prefWidth="153.0" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
            <children>
               <TextField fx:id="tfUsername" prefHeight="25.0" prefWidth="164.0" promptText="antonio" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <PasswordField fx:id="pfPassword" promptText="123456789" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
                <Label fx:id="welcomeText" text="User Name:" GridPane.rowIndex="1">
                  <font>
                     <Font name="Tahoma" size="12.0" />
                  </font></Label>
               <Label text="Password:" GridPane.rowIndex="2">
                  <font>
                     <Font name="Tahoma" size="12.0" />
                  </font></Label>
               <Label prefHeight="31.0" prefWidth="193.0" text="Welcome">
                  <font>
                     <Font name="Tahoma Bold" size="16.0" />
                  </font></Label>
               <Button fx:id="btnSignIn" mnemonicParsing="false" onMouseClicked="#onSignInButtonClick" prefHeight="25.0" prefWidth="85.0" text="Sign In" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
            </children>
         </GridPane>
         <Label fx:id="tfFeedback" />
      </VBox>
   </children>
</AnchorPane>
